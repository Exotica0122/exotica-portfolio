---
import { Icon } from "astro-icon";
import Button from "./Button.astro";

const {
  title = "Title",
  description = "Description",
  icon,
  iconLink,
  image,
  imageAlt,
} = Astro.props;
---

<div
  class="flex flex-col items-start justify-between overflow-hidden rounded-xl bg-gray-800 hover:shadow-2xl"
>
  <div class="h-full w-full overflow-hidden bg-gray-200">
    {image && <img src={image} alt={imageAlt} class="object-cover" />}
  </div>
  <div class="flex w-full flex-col p-4 text-white">
    <h1 class="text-2xl font-bold">{title}</h1>
    <p class="my-2">{description}</p>
    <div class="flex items-center justify-center gap-4 self-end">
      {
        icon && (
          <a
            href={iconLink}
            class="rounded-full bg-gradient-to-tl from-red-500 to-orange-400 p-2 transition-transform hover:scale-125"
          >
            <Icon name={icon} class="w-8" />
          </a>
        )
      }
    </div>
  </div>
</div>
