---
import MainLayout from '../MainLayout.astro';

const { frontmatter } = Astro.props;
---

<MainLayout title={frontmatter.title}>
  <div
    class='blog-content break-words bg-white px-6 py-12 text-black shadow-inner xl:px-12'
  >
    <h1>{frontmatter.title}</h1>
    {
      frontmatter.imageUrl && (
        <img src={frontmatter.imageUrl} alt={frontmatter.title} class='mt-8' />
      )
    }
    <slot />
  </div>
</MainLayout>

<style is:global lang='scss'>
  .blog-content {
    @apply leading-relaxed;

    h1 {
      @apply mt-8 text-center text-5xl font-bold leading-tight first:mt-0;
    }
    h2 {
      @apply mt-12 text-xl font-bold sm:text-2xl;
    }
    h3 {
      @apply mt-4 text-base font-bold sm:text-lg;
    }
    p {
      @apply my-4;
    }
    a {
      @apply text-purple-400 underline-offset-2 hover:underline;
    }
    :not(pre) code {
      @apply break-words rounded-sm bg-gray-100 px-1 italic;
    }
    blockquote {
      @apply border-l-4 border-red-300 bg-purple-200 p-4 italic shadow-lg;
    }
    ul {
      @apply ml-4 list-inside list-disc;
    }
    em {
      font-weight: 300;
    }

    .astro-code {
      @apply py-4 px-3;
    }

    img {
      @apply mx-auto my-6 sm:max-w-md md:max-w-md lg:max-w-xl xl:max-w-2xl;
    }
  }
</style>
