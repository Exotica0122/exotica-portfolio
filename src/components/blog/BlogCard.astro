---
const { url, title, description, date, imageUrl } = Astro.props;
---

<div
  class="mx-4 rounded-xl bg-gray-900 p-6 outline-2 hover:outline hover:outline-offset-2"
>
  <a
    href={url}
    class="flex flex-col items-center justify-center gap-6 sm:flex-row"
  >
    <img src={imageUrl} class="m-2 w-80 sm:w-48" />
    <div class="items-stretchf flex h-auto flex-col content-between">
      <h1 class="text-2xl font-bold">{title}</h1>
      <p>{description}</p>
      <p class="mt-2 text-end font-thin italic">{date}</p>
    </div>
  </a>
</div>
